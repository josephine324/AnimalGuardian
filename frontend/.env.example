# Flutter Environment Variables
# Copy this file to .env and update with your actual values
# The .env file is gitignored and won't be committed to the repository

# API Configuration
# Production API URL (default)
API_BASE_URL=https://animalguardian-backend-production-b5a8.up.railway.app/api

# For local development, uncomment and use:
# API_BASE_URL=http://localhost:8000/api
# For Android Emulator:
# API_BASE_URL=http://10.0.2.2:8000/api

# App Configuration
APP_NAME=AnimalGuardian
APP_VERSION=1.0.0

# API Endpoints (these are relative to API_BASE_URL)
API_LOGIN_ENDPOINT=/auth/login/
API_SIGNUP_ENDPOINT=/auth/signup/
API_OTP_VERIFY_ENDPOINT=/auth/verify-otp/
API_REFRESH_TOKEN_ENDPOINT=/auth/refresh/
API_PROFILE_ENDPOINT=/auth/profile/
API_LIVESTOCK_ENDPOINT=/livestock/
API_CASES_ENDPOINT=/cases/reports/
API_NOTIFICATIONS_ENDPOINT=/notifications/
API_COMMUNITY_ENDPOINT=/community/
API_MARKET_ENDPOINT=/marketplace/
API_WEATHER_ENDPOINT=/weather/

# Storage Keys
STORAGE_ACCESS_TOKEN_KEY=access_token
STORAGE_REFRESH_TOKEN_KEY=refresh_token
STORAGE_USER_DATA_KEY=user_data
STORAGE_IS_FIRST_LAUNCH_KEY=is_first_launch
STORAGE_LANGUAGE_KEY=selected_language
STORAGE_THEME_KEY=selected_theme

# Pagination
DEFAULT_PAGE_SIZE=20

# File Upload Limits
MAX_IMAGE_SIZE_KB=5120
MAX_VIDEO_SIZE_MB=50

# Validation
MIN_PASSWORD_LENGTH=8
MAX_PASSWORD_LENGTH=128
PHONE_NUMBER_LENGTH=10
