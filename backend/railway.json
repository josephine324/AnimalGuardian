{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "watchPatterns": [
      "backend/**"
    ]
  },
  "deploy": {
    "startCommand": "sh start.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "keep-alive",
      "command": "python keep_alive.py 5",
      "restartPolicyType": "ON_FAILURE"
    }
  ]
}
