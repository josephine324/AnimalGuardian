# Django Settings
SECRET_KEY=django-insecure-change-this-in-production-generate-a-secure-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,*.railway.app,animalguardian-backend-production-b5a8.up.railway.app
DJANGO_SETTINGS_MODULE=animalguardian.settings

# Database Configuration
# For local development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3
# For production (PostgreSQL on Railway) - uncomment and update:
# DATABASE_URL=postgresql://user:password@host:port/dbname

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8081,https://animalguards.netlify.app,https://animalguardian-backend-production-b5a8.up.railway.app
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://animalguards.netlify.app,https://animalguardian-backend-production-b5a8.up.railway.app

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password-here
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Africa's Talking (SMS/USSD)
AFRICASTALKING_USERNAME=your-africastalking-username
AFRICASTALKING_API_KEY=your-africastalking-api-key

# Twilio (Backup SMS Service) - Optional
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Celery & Redis (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379
REDIS_URL=redis://localhost:6379

# Static & Media Files
STATIC_URL=/static/
MEDIA_URL=/media/

# Python Version (for Railway)
PYTHON_VERSION=3.11.7

# Web Concurrency (for Gunicorn)
WEB_CONCURRENCY=3
