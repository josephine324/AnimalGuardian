# Django Settings

SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,*.onrender.com,animalguardian-backend.onrender.com

# Database Configuration
# For local development (SQLite) - leave DATABASE_URL empty or unset
# DATABASE_URL=

# For production (PostgreSQL) - uncomment and set your database URL
# Render PostgreSQL format: postgresql://user:password@host:port/dbname
# DATABASE_URL=postgresql://user:password@host:port/dbname

# CORS Configuration
# Set to true to allow all origins (useful for development)
CORS_ALLOW_ALL_ORIGINS=true

# Specific CORS origins (comma-separated, no trailing slashes)
# CORS_ALLOWED_ORIGINS=https://animalguards.netlify.app,https://yourdomain.com

# Email Configuration (optional)
# DEFAULT_FROM_EMAIL=noreply@animalguardian.com
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# AWS S3 Configuration (optional - for file storage)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# SMS Configuration (optional - AfricasTalking)
# AFRICASTALKING_API_KEY=your-api-key
# AFRICASTALKING_USERNAME=your-username

# Twilio Configuration (optional)
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# Celery Configuration (optional - for background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Render-specific (automatically set by Render, no need to set manually)
# RENDER_EXTERNAL_HOSTNAME=animalguardian-backend.onrender.com
# PORT=10000

# Railway-specific (for backward compatibility, if still using Railway)
# RAILWAY_PUBLIC_DOMAIN=your-app.up.railway.app
# RAILWAY_ENVIRONMENT=production
